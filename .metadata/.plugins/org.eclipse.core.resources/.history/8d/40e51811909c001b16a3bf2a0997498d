package teste;

import java.util.Scanner;

public class Fibonacci {

	public static void main(String[] args) {

		int i = 1, numero, soma = 0, ant = 0;

		Scanner num = new Scanner(System.in);

		System.out.println("Informe um número: ");
		numero = num.nextInt();

		while (numero >= soma) {

			System.out.println(soma);
			soma = ant + i;
			ant = i;
			i = soma;

		}
		if (ant == numero) {
			System.out.println(numero + " " + "É um número da sequência de Fibonacci! O próximo número é  " + soma + "!");
		} else {
			System.out.println(numero + " " + "Não é uma sequência de Fibonacci!");
		}

	}

}
