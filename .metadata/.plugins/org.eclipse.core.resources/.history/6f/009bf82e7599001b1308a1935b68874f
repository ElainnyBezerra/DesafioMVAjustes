package principal;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

import entidade.Pedidos;

public class Principal {

	public static void main(String[] args) {

		int qtd1, resp = 0;
		String resposta;
		//List<Pedidos> pedido = new ArrayList<Pedidos>();
		
		Scanner qtd = new Scanner(System.in);

		while (resp != 4) {
			System.out.println("Sorveteria MV");
			System.out.println("************************************");
			System.out.println("1 - Inserir Sorvete" + "\n" + "2 - Remover Sorvete" + "\n" + "3 - Listar todos"
			 + "\n" + "4 - Sair");
			System.out.println("Selecione a opção desejada: ");
			resp = qtd.nextInt();

			switch (resp) {
			case 1:
				System.out.println("Informe a quantidade de sorvetes: ");
				qtd1 = qtd.nextInt();
				
				Pedidos.inserir(qtd1);
				
				System.out.println("Os sorvetes foram inseridos com sucesso!" + "\n");

				break;

			case 2:
				// Pedidos.remover();
				break;

			case 3:
				System.out.println(Pedidos.listarTodos());
				break;

			case 4:
				System.out.println("Programa finalizado!");
				break;

			default:

				System.out.println("Opção inválida!");
				break;
			}

		}
		
	}

}
